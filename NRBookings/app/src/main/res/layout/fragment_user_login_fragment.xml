<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_login_fragment">

    <EditText
        android:id="@+id/etULemail"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/name"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint="  USER ID"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/etULpassword"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/pn"
        android:ems="10"
        android:fontFamily="@font/times_new_roman"
        android:hint="  ENTER PASSWORD"
        android:inputType="textPassword"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etULemail"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/btnUlogin"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/times_new_roman"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etULpassword"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_new_roman"
        android:text="OR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUlogin"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/btnUG"
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:background="@drawable/gs"
        android:text="        SIGN IN WITH GOOGLE"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="176dp"
        android:text="Not registered yet.Register here"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUG" />


</androidx.constraintlayout.widget.ConstraintLayout>